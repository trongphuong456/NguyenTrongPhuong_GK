<%- include ('partials/header.ejs'); -%>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
        <form class="add-player-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="Ho" id="Ho" placeholder="Ho" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="Ten" id="Ten" placeholder="Ten" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="thangdki" id="thangdki" placeholder="thangdki" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="number" class="form-control" name="sothang" id="sothang" placeholder="sothang" required>
                </div>
                <div class="form-group col-md-6">
                    <select id="Tien" name="Tien" class="form-control" required>
                        <option selected disabled>Choose Tien</option>
                        <option>180 000</option>
                        <option>350 000</option>
                        <option>520 000</option>
                        <option>690 000</option>
                    </select>
                </div>
                <div class="col-md-12">
                    <label for="player-img"><b>Gymer Image</b></label><br>
                    <input type="file" name="image" id="player-img" class="" required>
                </div> 
            </div>
            <button type="submit" class="btn btn-primary float-right">Add Gymers</button>
        </form>
    </div>
</div>
</body>
</html>